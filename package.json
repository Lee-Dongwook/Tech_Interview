{
  "name": "tech-interview",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@eslint/js": "^9.18.0",
    "@types/react": "~18.2.21",
    "@types/react-native": "^0.72.2",
    "cross-env": "^7.0.3",
    "eas-cli": "^14.3.1",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-native": "^5.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "latest",
    "patch-package": "^8.0.0",
    "pinst": "^3.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.4.15",
    "turbo": "^1.4.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.21.0"
  },
  "scripts": {
    "prepare": "husky",
    "postinstall": "patch-package && husky",
    "native": "cd apps/expo && npx expo start --dev-client",
    "native:tunnel": "cd apps/expo && npx expo start --dev-client --tunnel",
    "native:metro:clear": "cd apps/expo && npx expo start --dev-client --clear",
    "native:android": "cd apps/expo && yarn android --device",
    "native:ios": "cd apps/expo && yarn ios --device",
    "native:prod:android": "cd apps/expo && yarn android --device --variant release",
    "native:prod:ios": "cd apps/expo && yarn ios --device --configuration Release",
    "native:clean": "cd apps/expo && npx expo prebuild --clean",
    "native:clean:android": "cd apps/expo && npx expo prebuild --clean --platform android",
    "native:clean:ios": "cd apps/expo && npx expo prebuild --clean --platform ios",
    "native:build": "cd apps/expo && npx expo prebuild",
    "native:ipa": "cd apps/expo && eas build --profile preview:ios --platform ios --local",
    "native:apk": "cd apps/expo && eas build --profile preview:android --platform android --local",
    "open:xcode": "cd apps/expo/ios",
    "open:android:studio": "open -a \"Android Studio\" apps/expo/android"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "metro": "~0.76.7",
    "metro-resolver": "~0.76.7"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ],
  "packageManager": "yarn@4.8.1"
}
